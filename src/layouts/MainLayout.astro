---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Layout/footer/footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<html lang="en" dir="ltr" class={"w-full overflow-x-hidden"}>
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <main class="flex min-h-screen w-full text-xl">
      <div class="mt-8 mb-20 flex w-full items-center flex-col mx-auto">
        <slot />
        <Footer />
      </div>
    </main>
  </body>
</html>
