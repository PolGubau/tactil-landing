---
type Props = {
  title: string;
  className?: string;
};
const { title, className }: Props = Astro.props;
---

<div class:list={["bento-item", "bg-background leading-tight", className]}>
  <h3 class="bento-title font-bold text-xl md:text-2xl">{title}</h3>
  <slot name="description" />
</div>

<style>
  .bento-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: -7px 7px 20px 0px rgba(0, 0, 0, 0.05);
    border-radius: 1em;
    padding: min(8vw, 2rem);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
</style>
