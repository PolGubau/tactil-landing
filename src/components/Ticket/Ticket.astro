<style>
  .ticket {
    height: 1003px;
    aspect-ratio: 579 / 1003;

    width: calc(4635px / 8);
    object-fit: none;
    object-position: 0% 0%;
    transition: none;

    animation: burn steps(7) forwards;
    view-timeline-name: --burning-ticket;
    animation-timeline: --burning-ticket;
    animation-range: 20% cover 80%;

    @media screen and (max-width: 600px) {
      width: 90vw;
    }
  }

  @keyframes burn {
    from {
      object-position: 0% 0%;
    }
    90% {
      opacity: 1;
    }
    to {
      object-position: 100% 0%;
      /* opacity: 0; */
    }
  }
</style>

