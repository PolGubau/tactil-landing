---
import type { ProjectMetadata } from "../../../lib/utils";
import "./post-list.css";
import ProjectListItem from "./ProjectListItem.astro";

type Props = {
  projects: ProjectMetadata[];
};

const { projects } = Astro.props;
---

<ul class="flex w-full flex-wrap gap-2" id="cards">
  {projects.map((p, i) => <ProjectListItem p={p} index={i} />)}
</ul>
