<style>
  @keyframes faded-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
      filter: blur(5px);
    }
    to {
      opacity: 1;
    }
  }

  .heading-1 {
    opacity: 0;
    animation: faded-in 0.6s ease-out;
    animation-delay: 0.1s;
    animation-fill-mode: forwards;
  }
  .heading-2 {
    opacity: 0;
    animation: faded-in 0.6s ease-out;
    animation-delay: 1.2s;
    animation-fill-mode: forwards;
  }
</style>
